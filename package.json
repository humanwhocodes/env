{
  "name": "@humanwhocodes/env",
  "version": "2.1.2",
  "description": "A utility to verify that environment variables exist.",
  "main": "dist/env.js",
  "module": "dist/env.mjs",
  "types": "dist/env.d.ts",
  "exports": {
    "require": "./dist/env.js",
    "import": "./dist/env.mjs"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "tsc --allowJs -d --emitDeclarationOnly",
      "git add"
    ]
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/nzakas"
  },
  "scripts": {
    "build": "rollup -c && tsc",
    "prepare": "npm run build",
    "lint": "eslint src/ tests/",
    "test:unit": "mocha -r esm tests/env.test.js",
    "test:build": "npm run build && node tests/pkg.test.cjs && node tests/pkg.test.mjs",
    "test": "npm run test:unit && npm run test:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/humanwhocodes/env.git"
  },
  "keywords": [
    "nodejs",
    "deno",
    "environment",
    "environment variables"
  ],
  "author": "Nicholas C. Zaks",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "esm": "^3.2.25",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "rollup": "^1.20.3",
    "rollup-plugin-babel-minify": "^9.0.0",
    "typescript": "^4.0.3",
    "yorkie": "^2.0.0"
  }
}
