{
  "name": "@humanwhocodes/env",
  "version": "2.2.4",
  "description": "A utility to verify that environment variables exist.",
  "main": "dist/env.cjs.js",
  "module": "dist/env.mjs",
  "types": "dist/env.d.ts",
  "exports": {
    "require": {
      "default": "./dist/env.cjs.js",
      "types": "./dist/env.d.ts"
    },
    "import": {
      "default": "./dist/env.mjs",
      "types": "./dist/env.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/nzakas"
  },
  "scripts": {
    "build": "rollup -c && tsc",
    "prepare": "npm run build",
    "lint": "eslint src/ tests/",
    "pretest": "npm run build",
    "test:unit": "mocha -r esm tests/env.test.js",
    "test:build": "node tests/pkg.test.cjs && node tests/pkg.test.mjs",
    "test:types": "node tests/types.test.js",
    "test": "npm run test:unit && npm run test:build && npm run test:types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/humanwhocodes/env.git"
  },
  "keywords": [
    "nodejs",
    "deno",
    "environment",
    "environment variables"
  ],
  "author": "Nicholas C. Zaks",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "chai": "4.3.7",
    "eslint": "^8.21.0",
    "esm": "3.2.25",
    "lint-staged": "14.0.1",
    "mocha": "8.4.0",
    "rollup": "1.32.1",
    "rollup-plugin-babel-minify": "9.0.0",
    "typescript": "5.1.6",
    "yorkie": "2.0.0"
  }
}
